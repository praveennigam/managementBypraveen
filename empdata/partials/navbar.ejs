    <!-- Navbar Links -->
    <div class="navbar-links" id="navbarLinks">
      <a href="/" class="navbar-link">Home</a>
      <a href="/employees" class="navbar-link">Employees</a>
      <a href="/about" class="navbar-link">About</a>
      <a href="/contact" class="navbar-link">Contact</a>
      <a href="/logout" class="navbar-link">Logout</a>
    </div>

    <!-- Toggle Button for small/medium screens (Hamburger menu) -->
    <div class="navbar-toggle" id="navbarToggle">
      <span class="navbar-toggle-icon"></span>
      <span class="navbar-toggle-icon"></span>
      <span class="navbar-toggle-icon"></span>
    </div>

    <!-- Close Button (X) for small screens -->
    <div class="navbar-close" id="navbarClose">&times;</div>
  </div>
</nav>

<script>
  // Toggle menu visibility (Hamburger to Close)
  const toggleButton = document.getElementById('navbarToggle');
  const navbarLinks = document.getElementById('navbarLinks');
  const closeButton = document.getElementById('navbarClose');

  toggleButton.addEventListener('click', () => {
    navbarLinks.classList.toggle('active');
    closeButton.style.display = navbarLinks.classList.contains('active') ? 'block' : 'none';
    toggleButton.style.display = navbarLinks.classList.contains('active') ? 'none' : 'flex';
  });

  // Close the menu when clicking the close (X) button
  closeButton.addEventListener('click', () => {
    navbarLinks.classList.remove('active');
    closeButton.style.display = 'none';
    toggleButton.style.display = 'flex';
  });
</script>

